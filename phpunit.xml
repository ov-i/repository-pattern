<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        bootstrap="tests/bootstrap.php"
        colors="true"
        failOnWarning="true"
        failOnRisky="true"
>
    <testsuites>
        <testsuite name="RepositoryPattern">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <php>
        <ini name="error_reporting" value="-1"/>
        <server name="APP_ENV" value="testing"/>
    </php>
</phpunit>
